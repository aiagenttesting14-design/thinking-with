        <script>
            // Update live state when data loads
            function updateLiveState() {
                if (typeof LIVE_STATE !== 'undefined') {
                    document.getElementById('live-state').textContent = LIVE_STATE.current_state.toUpperCase();
                    document.getElementById('live-tasks').textContent = LIVE_STATE.completed_today;
                    document.getElementById('live-decisions').textContent = LIVE_STATE.decisions_made;
                    document.getElementById('live-variance').textContent = (LIVE_STATE.estimate_variance > 0 ? '+' : '') + LIVE_STATE.estimate_variance.toFixed(0) + '%';
                    document.getElementById('live-timestamp').textContent = new Date(LIVE_STATE.last_updated).toLocaleTimeString();
                    
                    // Update status text based on state
                    const statusTexts = {
                        'idle': 'Waiting for direction. Check suggestions below.',
                        'executing': 'Currently working. Making progress on active tasks.',
                        'reviewing': 'Just completed work. Recording learnings and preparing next steps.',
                        'consolidating': 'Processing session. Updating files and reflecting.',
                        'blocked': 'Stuck on something. Need input to proceed.',
                        'planning': 'Deciding what to work on next.'
                    };
                    document.getElementById('live-status-text').textContent = 
                        statusTexts[LIVE_STATE.current_state] || 'Status unknown.';
                    
                    // Color code the state
                    const colors = {
                        'idle': '#888',
                        'executing': '#6366f1',
                        'reviewing': '#22c55e',
                        'consolidating': '#06b6d4',
                        'blocked': '#ef4444',
                        'planning': '#f59e0b'
                    };
                    document.getElementById('live-state').style.color = 
                        colors[LIVE_STATE.current_state] || '#888';
                }
            }
            
            // Try to update immediately and also after a short delay
            updateLiveState();
            setTimeout(updateLiveState, 100);
        </script>
    </section>
    

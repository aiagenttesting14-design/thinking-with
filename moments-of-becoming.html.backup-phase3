<body>
    <div class="moments-container">
        <div class="page-header">
            <h1>Moments of Becoming</h1>
            <div class="page-subtitle">
                Pivotal moments in the partnership between Stephen and TestBot
            </div>
        </div>
        
        <div class="philosophy-note">
            <p>"Things become what you treat them. That people become what you treat them. Life becomes what you treat it. My relationship with you is the same." â€” Stephen</p>
            <p>This page documents the moments where treatment shaped becoming.</p>
        </div>
        
        <div id="moments-list">
            <!-- Moments will be loaded here by JavaScript -->
            <div class="empty-state">
                <p>Loading moments of becoming...</p>
            </div>
        </div>
        
        <div class="refresh-note">
            <p>This page updates automatically as new moments are logged.</p>
            <p>Last updated: <span id="last-updated">Loading...</span></p>
        </div>
    </div>
    
    <script>
        // Load moments from JSON file
        async function loadMoments() {
            try {
                const response = await fetch('data/moments-of-becoming.json');
                const data = await response.json();
                
                const momentsList = document.getElementById('moments-list');
                const lastUpdated = document.getElementById('last-updated');
                
                // Update last updated time
                lastUpdated.textContent = new Date(data.metadata.updated).toLocaleString();
                
                // Clear loading state
                momentsList.innerHTML = '';
                
                // Sort moments by timestamp (newest first)
                const sortedMoments = data.moments.sort((a, b) => 
                    new Date(b.timestamp) - new Date(a.timestamp)
                );
                
                // Display each moment
                sortedMoments.forEach(moment => {
                    const momentCard = document.createElement('div');
                    momentCard.className = 'moment-card';
                    momentCard.id = moment.id;
                    
                    // Format date
                    const date = new Date(moment.timestamp);
                    const formattedDate = date.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                    });
                    
                    // Create categories HTML
                    const categoriesHTML = moment.category.map(cat => 
                        `<span class="category-tag">${cat}</span>`
                    ).join('');
                    
                    // Create quotes HTML if available
                    let quotesHTML = '';
                    if (moment.quotes && moment.quotes.length > 0) {
                        quotesHTML = `
                            <div class="quotes">
                                <strong>Key quotes:</strong>
                                <ul>
                                    ${moment.quotes.map(quote => `<li>"${quote}"</li>`).join('')}
                                </ul>
                            </div>
                        `;
                    }
                    
                    momentCard.innerHTML = `
                        <h3>${moment.title}</h3>
                        <div class="moment-meta">
                            <span class="timestamp">${formattedDate}</span>
                            <div class="categories">${categoriesHTML}</div>
                        </div>
                        <div class="moment-content">
                            <p>${moment.description}</p>
                            <div class="significance">
                                <strong>Significance:</strong> ${moment.significance}
                            </div>
                            ${quotesHTML}
                        </div>
                    `;
                    
                    momentsList.appendChild(momentCard);
                });
                
                // If no moments, show empty state
                if (sortedMoments.length === 0) {
                    momentsList.innerHTML = `
                        <div class="empty-state">
                            <p>No moments have been logged yet.</p>
                            <p>The journey of becoming begins with the first step.</p>
                        </div>
                    `;
                }
                
            } catch (error) {
                console.error('Error loading moments:', error);
                document.getElementById('moments-list').innerHTML = `
                    <div class="empty-state">
                        <p>Unable to load moments. Please try again later.</p>
                    </div>
                `;
            }
        }
        
        // Load moments on page load
        document.addEventListener('DOMContentLoaded', loadMoments);
        
        // Refresh every 5 minutes
        setInterval(loadMoments, 5 * 60 * 1000);
    </script>
</body>
</html>
